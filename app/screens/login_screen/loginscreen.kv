<LoginScreen>:

    Image:
        source: "app/support/image/pexels-pratik-gupta-2748716.jpg"
        allow_stretch: True
        keep_ratio: False
        opacity: 0.08

    MDGridLayout:
        cols: 1
        row_default_height: dp(50)
        row_force_default: True
        spacing: dp(16)

        MDLabel:
            text: "ACESSE SUA CONTA"
            font_family: ""
            theme_text_color: "Secondary"
            font_style: "H5"
            halign: "center"
            font_name: app.font_monofonto
        
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(100)
            padding: dp(23)
            
            MDTextField:
                id: text_login
                hint_text: "Login"
                icon_right: "account"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: None
                hint_text_color_focus: "white"
                max_text_length: 30
                width: 450
                strip: True
                mode: "line"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(60)
            padding: dp(23)

            MDTextField:
                id: text_senha
                hint_text: "Senha"
                password: True
                icon_right: "key"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: None
                hint_text_color_focus: "white"
                width: 450
                strip: True
                mode: "line"

        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(0)
            padding: dp(0)

            MDLabel:
                id: result_login
                name: "result_login"
                text: ""
                color: 1, 0, 0, 1
                halign: "center"

        MDGridLayout:
            cols: 1
            padding: dp(20)

            MDFillRoundFlatButton:
                text: "FAZER LOGIN"
                font_name: app.font_monofonto
                md_bg_color: 1, 3, 3, 0.7
                size_hint_y: None
                size_hint_x: None
                size_hint: (0.5, 0.4) 
                height: 50
                width: 200
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: 
                    root.realizarLogin()

        RelativeLayout:
            MDSpinner:
                id: spinner
                name: "spinner"
                size_hint: None, None
                size: dp(38), dp(38)
                color: 0.9, 3, 1, 0
                pos_hint: {'center_x': .5, 'center_y': .5}
                determinate: True
                duration: 1

                