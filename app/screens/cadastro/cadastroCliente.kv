<CadastroCliente>:

    Image:
        source: "app/support/image/minimalbackground.jpg"
        allow_stretch: True
        keep_ratio: False
        opacity: 0.060

    MDBoxLayout:
        orientation: "horizontal"

        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"

            MDRectangleFlatIconButton:
                text: "Back"
                font_name: app.font_monofonto
                icon: "arrow-left"
                theme_text_color: "Custom"
                font_size: "20dp"
                line_color: 0, 0, 0, 0
                on_release: 
                    root.manager.current = "tela_principal"

    MDBoxLayout:
        orientation: "horizontal"
        spacing: dp(20)
        padding: dp(20)
        pos_hint: {"center_x": .5, "center_y": .9}

        MDLabel:
            text: "[u]CADASTRO DE CLIENTE[/u]"
            font_style: "H5"
            text_color: 1, 1, 1, 1
            font_name: app.font_monofonto
            markup: True

    MDGridLayout:
        cols: 1
        adaptive_height: True
        spacing: dp(65)
        padding: dp(23)
        pos_hint: {"center_x": .5, "center_y": .6}

        MDBoxLayout:
            orientation: "vertical"

            MDTextField:
                id: ra_cliente
                name: "ra_cliente"
                required: True
                hint_text: "RA *"
                mode: "rectangle"
                size_hint_x: 0.65
                hint_text_color_focus: "white"
                strip: True
                font_name: app.font_monofonto
                input_filter: "int"
                multiline: False
        
        MDBoxLayout:
            orientation: "vertical"

            MDTextField:
                id: nome_cliente
                name: "nome_cliente"
                required: True
                hint_text: "Nome *"
                mode: "rectangle"
                size_hint_x: 0.65
                hint_text_color_focus: "white"
                strip: True
                font_name: app.font_monofonto
                multiline: False
                min_text_length: 5
        
        MDBoxLayout:
            orientation: "vertical"

            MDTextField:
                id: semestre_cliente
                name: "semestre_cliente"
                required: True
                hint_text: "Semestre *"
                mode: "rectangle"
                size_hint_x: 0.65
                hint_text_color_focus: "white"
                strip: True
                font_name: app.font_monofonto
                input_filter: "int"
                multiline: False

        MDGridLayout:
            cols: 1

            MDTextField:
                id: comentario_cliente
                name: "comentario_cliente"
                hint_text: "Anotação"
                mode: "rectangle"
                size_hint_x: 1
                hint_text_color_focus: "white"
                strip: True
                font_name: app.font_monofonto
                multiline: True
                max_height: 150
                max_text_length: 205


    MDBoxLayout:
        orientation: "horizontal"
        spacing: dp(20)
        padding: dp(20)

        AnchorLayout:
            anchor_x: "right"
            anchor_y: "bottom"

            MDRoundFlatIconButton:
                text: "FINALIZAR"
                icon: "check"
                size_hint: (0.1, 0.06)
                font_name: app.font_monofonto
                line_color: 0, 0, 0, 0
                font_size: "20dp"
                on_release:
                    root.finalizarCadastroCliente()
